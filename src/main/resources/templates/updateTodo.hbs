<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

    <title>{{name}}</title>
  </head>
  <body>
      <div class="container">
              <div class="row align-content-center justify-content-center">
                  <div class="col-md-4 m-5">
                      <div class="card">
                          <div class="card-header">
                              Edit Todo
                          </div>
                          <div class="card-body">
                              <form action="/updateTodo/" method="put">
                                  <div class="form-group">
                                      <label for="todoTitle">Note Title</label>
                                      <input type="text" id="todoTitle" name="todoTitle" class="form-control" value="{{todo.title}}">{{todo.title}}</input>
                                  </div>
                                  <div class="form-group">
                                      <label for="todoNote">Note</label>
                                      <textarea type="text" rows="5" id="todoNote" name="todoNote" class="form-control" value="{{todo.note}}">{{todo.note}}</textarea>
                                  </div>
                                  <div class="form-group">
                                      <label for="todoLabels">Labels: </label>
                                          {{#each labels}}
                                          <div class="form-check form-check-inline" name="labels">

                                                  <input class="form-check-input" type="checkbox" value="" name="{{this.name}}" id="{{this.name}}">
                                                  <label class="form-check-label" for="{{this.name}}">
                                                      {{this.name}}
                                                  </label>
                                          </div>
                                          {{/each}}
                                  </div>
                                  <div class="form-group">
                                      <label for="priority">Enter priority by number 1, 2 or 3</label>
                                      <input type="number" id="priority" name="priority" class="form-control" >
                                  </div>
                                  <input type="submit" value="Save" class="btn btn-info">
      <!--                            <button>Submit</button>-->
                              </form>
                          </div>
                      </div>
                  </div>
              </div>
          </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
  </body>
</html>